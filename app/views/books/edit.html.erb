<body>
 <h1>Editing Book</h1>
 <%= form_with model: @book, url:book_path(@book.id),method: :patch do |f| %>
 
  <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
  </div>

  <div class="field">
   <label for="book_body">Body</label>
   <%= f.text_area :body %>
  </div>
  <div class="actions">
   <%= f.submit 'Update Book' %>
  </div>
 <% end %>
 
 <a>
  <%= link_to "Show",book_path(@book[:id]) %>
 </a>|
 <a>
  <%= link_to "Back","/books" %>
 </a>
</body>